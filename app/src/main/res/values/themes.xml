<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MTUCIFIIT" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:fontFamily">@font/pl_jk_di_li</item>
        <item name="android:textFontWeight" tools:targetApi="p">700</item>
        <item name="android:letterSpacing">0.01</item>

    </style>

    <style name="Theme.MTUCIFIIT" parent="Base.Theme.MTUCIFIIT" />


    <style name="ButtonCheck" parent="Widget.AppCompat.Button">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:background">@drawable/blue_button</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="ButtonDissabled" parent="Widget.AppCompat.Button">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:background">@drawable/blue_button</item>
        <item name="android:backgroundTint">@color/grey_100</item>
        <item name="android:textColor">@color/grey_600</item>
    </style>

    <style name="ButtonEmpty" parent="Widget.AppCompat.Button">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:background">@drawable/empty_button</item>
        <item name="android:textColor">@color/blue_600</item>
    </style>


    <style name="ButtonGrey" parent="Widget.AppCompat.Button">
        <item name="android:layout_height">40dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:background">@drawable/blue_button</item>
        <item name="android:backgroundTint">@color/grey_100</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ButtonOfItems" parent="Widget.AppCompat.Button">
        <item name="android:layout_height">40dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:background">@drawable/header_button</item>
        <item name="android:backgroundTint">@color/grey_100</item>
        <item name="android:textColor">@color/black</item>
    </style>


</resources>